{
  "name": "vrcx-data-analyzer",
  "version": "1.0.0",
  "main": "main.js",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.0.0"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postbuild": "electron-builder",
    "dist": "npm run build && npm run postbuild"
  },
  "build": {
    "appId": "com.oniya.vrcx-data-analyzer",
    "productName": "VRCX Data Analysis",
    "files": [
      "dist/**/*",
      "frontend/dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "dist/app.exe",
        "to": "dist/app.exe"
      },
      {
        "from": "frontend/dist",
        "to": "frontend"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "axios": "^1.8.2"
  }
}
